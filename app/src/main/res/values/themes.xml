<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wanderscope" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/Widget.Wanderscope.TextInput</item>
    </style>

    <style name="Theme.Wanderscope.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wanderscope.Toolbar" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Wanderscope.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Wanderscope.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_outline_error_outline_24</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="errorTextColor">@color/colorTextError</item>
    </style>
</resources>