<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wanderscope" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary color customization -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
        <!-- Secondary color customization -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here -->
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="textInputStyle">@style/Widget.Wanderscope.TextInput</item>
        <item name="materialButtonStyle">@style/Widget.Wanderscope.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.Wanderscope.FloatingActionButton</item>
        <item name="materialCalendarTheme">@style/Widget.Wanderscope.DatePicker</item>
        <item name="snackbarStyle">@style/Widget.Wanderscope.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Wandercope.SnackbarText</item>
        <item name="tabStyle">@style/Widget.Wanderscope.TabLayout</item>
    </style>

    <style name="Theme.Wanderscope.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/image_logo_splashscreen</item>
        <item name="postSplashScreenTheme">@style/Theme.Wanderscope</item>
    </style>

    <style name="Theme.Wanderscope.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Wanderscope.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Wanderscope.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="errorTextColor">@color/colorTextError</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Wanderscope.TextInput</item>
        <item name="android:textSize">@dimen/app_text_input_text_size</item>
    </style>

    <style name="Widget.Wanderscope.TextInput.Password">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorTextInputIcon</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.Wanderscope.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">@dimen/app_button_vertical_padding</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/app_button_text_size</item>
        <item name="cornerRadius">@dimen/app_button_corner_radius</item>
    </style>

    <style name="Widget.Wanderscope.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/colorSnackbar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Wandercope.SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/colorSnackbarText</item>
        <item name="android:textAppearance">@style/TextAppearance.Wanderscope.Regular</item>
    </style>

    <style name="TextAppearance.Wanderscope.H1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_h1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wanderscope.H2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_h2_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wanderscope.H3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_h3_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wanderscope.Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_default_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wanderscope.Regular" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_default_text_size</item>
    </style>

    <style name="Widget.Wanderscope.LessImportantText" parent="TextAppearance.Wanderscope.Regular">
        <item name="android:textColor">@color/colorTextLessImportant</item>
    </style>

    <style name="Widget.Wanderscope.ClickableText" parent="TextAppearance.Wanderscope.Regular">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Wanderscope.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_text_input_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.Wanderscope.TextInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/app_text_input_corner_size</item>
    </style>

    <style name="ShapeAppearanceOverlay.Wanderscope.DatePicker" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/app_date_picker_corner_size</item>
    </style>

    <style name="Widget.Wanderscope.CardView.RecyclerItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardCornerRadius">@dimen/app_recycler_item_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginBottom">@dimen/app_recycler_item_bottom_margin</item>
    </style>

    <style name="Widget.Wanderscope.CardView.RecyclerItem.Empty">
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="strokeColor">@color/colorSecondaryVariant</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.Wanderscope.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="elevation">2dp</item>
        <item name="tint">@color/colorBackground</item>
        <item name="fabSize">normal</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.Wanderscope.EditText.MultiLine" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">5</item>
        <item name="android:textAppearance">@style/TextAppearance.Wanderscope.Regular</item>
    </style>

    <style name="Widget.Wanderscope.TextInput.DatePicker">
        <item name="endIconMode">custom</item>
        <item name="errorIconDrawable">@null</item>
        <item name="endIconTint">@color/colorTextInputIcon</item>
        <item name="endIconDrawable">@drawable/ic_close_16</item>
    </style>

    <style name="Widget.Wanderscope.EditText.DatePicker" parent="Widget.MaterialComponents.TextView">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Wanderscope.Regular</item>
    </style>

    <style name="Widget.Wanderscope.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Wanderscope.DatePicker</item>
    </style>

    <style name="Widget.Wanderscope.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/tab_background_selector</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingStart">@dimen/app_tab_layout_padding</item>
        <item name="tabPaddingEnd">@dimen/app_tab_layout_padding</item>
        <item name="tabTextAppearance">@style/TextAppearance.Wanderscope.TabLayout</item>
    </style>

    <style name="TextAppearance.Wanderscope.TabLayout" parent="TextAppearance.Wanderscope.Regular">
        <item name="textAllCaps">false</item>
    </style>

</resources>