<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wanderscope" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:textColor">@color/colorText</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/Widget.Wanderscope.TextInput</item>
        <item name="materialButtonStyle">@style/Widget.Wanderscope.Button</item>
    </style>

    <style name="Theme.Wanderscope.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wanderscope.Toolbar" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Wanderscope.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Wanderscope.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_outline_error_outline_24</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="errorTextColor">@color/colorTextError</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Wanderscope.TextInput</item>
        <item name="android:textSize">@dimen/app_text_input_text_size</item>
    </style>

    <style name="Widget.Wanderscope.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">@dimen/app_button_vertical_padding</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/app_button_text_size</item>
        <item name="cornerRadius">@dimen/app_button_corner_radius</item>
    </style>

    <style name="Widget.Wanderscope.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/app_text_input_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.Wanderscope.TextInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/app_text_input_corner_size</item>
    </style>
</resources>