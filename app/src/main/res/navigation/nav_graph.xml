<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="cz.cvut.fit.steuejan.wanderscope.auth.intro.IntroFragment"
        tools:layout="@layout/fragment_intro" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="cz.cvut.fit.steuejan.wanderscope.auth.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login" />


    <fragment
        android:id="@+id/registerFragment"
        android:name="cz.cvut.fit.steuejan.wanderscope.auth.register.RegisterFragment"
        android:label="@string/register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/FirstFragment"
        android:name="cz.cvut.fit.steuejan.wanderscope.home.HomeFragment"
        android:label="@string/your_trip"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="cz.cvut.fit.steuejan.wanderscope.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>